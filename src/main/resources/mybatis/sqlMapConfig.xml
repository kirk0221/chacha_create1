<?xml version="1.0" encoding="UTF-8" ?>
<!-- document type 문법 -->
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<!-- log값 처리, jdbc가 null이 왔을때 처리 -->
	<settings>
		<setting name="logImpl" value="LOG4J" />
		<setting name="jdbcTypeForNull" value="NULL" />
	</settings>

	<!-- Entity의 type에 대한 별칭 지정 -->
	<typeAliases>
		<!-- category -->
	    <typeAlias type="com.chacha.create.model.entity.category.DCategoryEntity" alias="dCategoryEntity" />
	    <typeAlias type="com.chacha.create.model.entity.category.TypeCategoryEntity" alias="typeCategoryEntity" />
	    <typeAlias type="com.chacha.create.model.entity.category.UCategoryEntity" alias="uCategoryEntity" />
	    <!-- chat -->
	    <typeAlias type="com.chacha.create.model.entity.chat.ChatroomEntity" alias="chatroomEntity" />
	    <typeAlias type="com.chacha.create.model.entity.chat.ChattingEntity" alias="chattingEntity" />
	    <!-- member -->
	    <typeAlias type="com.chacha.create.model.entity.member.AddressEntity" alias="addressEntity" />
	    <typeAlias type="com.chacha.create.model.entity.member.CardEntity" alias="cardEntity" />
	    <typeAlias type="com.chacha.create.model.entity.member.CartEntity" alias="cartEntity" />
	    <typeAlias type="com.chacha.create.model.entity.member.MemberEntity" alias="memberEntity" />
	    <typeAlias type="com.chacha.create.model.entity.member.SellerEntity" alias="sellerEntity" />
		<!-- order -->
	    <typeAlias type="com.chacha.create.model.entity.order.DeliveryEntity" alias="deliveryEntity" />
	    <typeAlias type="com.chacha.create.model.entity.order.OrderDetailEntity" alias="orderDetailEntity" />
	    <typeAlias type="com.chacha.create.model.entity.order.OrderInfoEntity" alias="orderInfoEntity" />
	    <typeAlias type="com.chacha.create.model.entity.order.ReviewEntity" alias="reviewEntity" />
		<!-- product -->
	    <typeAlias type="com.chacha.create.model.entity.product.PImgEntity" alias="pImgEntity" />
	    <typeAlias type="com.chacha.create.model.entity.product.ProductEntity" alias="productEntity" />
		<!-- store -->
	    <typeAlias type="com.chacha.create.model.entity.store.NoticeEntity" alias="noticeEntity" />
	    <typeAlias type="com.chacha.create.model.entity.store.QuestionEntity" alias="questionEntity" />
	    <typeAlias type="com.chacha.create.model.entity.store.ReportEntity" alias="reportEntity" />
	    <typeAlias type="com.chacha.create.model.entity.store.StoreEntity" alias="storeEntity" />
	</typeAliases>
	
	<!-- DTO의 type에 대한 별칭 지정 -->
	<typeAliases>
	    <typeAlias type="com.chacha.create.model.[작업명].AddressDTO" alias="addressDTO" /> <!-- 예시임 -->

	</typeAliases>

</configuration>